<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- activity_add_item.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/edit_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do item" />

        <EditText
            android:id="@+id/edit_item_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantidade"
            android:inputType="number" />

        <EditText
            android:id="@+id/edit_item_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unidade (ex: kg, un, etc.)" />

        <ImageView
            android:id="@+id/item_category_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_default_category"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Ícone da categoria" />

        <Button
            android:id="@+id/btn_save_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar Item"
            android:backgroundTint="@color/green"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>